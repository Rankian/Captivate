<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/layout_middle_padding"
        android:background="@mipmap/image_personal_background_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.sanjie.zy.widget.view.ZYCircleImageView
                android:id="@+id/personal_user_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_avatar" />

            <TextView
                android:id="@+id/personal_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_small_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_18_size"
                tools:text="断弦" />

            <TextView
                android:id="@+id/personal_user_signature_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_small_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_14_size"
                tools:text="金陵城东谁家子，窃听琴声碧窗里" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="@dimen/layout_small_padding"
            android:background="@color/translucent_20_white"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_small_padding"
                    android:text="我关注的人"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14_size" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_small_padding"
                    android:text="48"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_small_padding"
                    android:text="我的作品"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14_size" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_small_padding"
                    android:text="62"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_small_padding"
                    android:text="收藏的作品"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14_size" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_small_padding"
                    android:text="85"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14_size" />

            </LinearLayout>

        </LinearLayout>
        
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/personal_user_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            app:srcCompat="@mipmap/icon_personal_option"
            android:layout_gravity="right"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:padding="@dimen/layout_normal_padding"/>

    </FrameLayout>

</LinearLayout>